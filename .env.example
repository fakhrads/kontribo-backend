# =========================
# App Environment
# =========================
NODE_ENV=development
APP_URL=http://localhost:3000
API_PORT=4000

# =========================
# CORS & Cookie
# =========================
CORS_ORIGIN=*
COOKIE_SECURE=false

SESSION_COOKIE_NAME=kontribo_session
SESSION_TTL_DAYS=30
SESSION_COOKIE_SECURE=false

# =========================
# Database
# =========================
DATABASE_URL=postgresql://kontribo:password@localhost:5432/kontribo_db

# =========================
# Security
# =========================
PASSWORD_PEPPER=replace_with_random_long_secret

# =========================
# Object Storage (S3 Compatible)
# =========================
S3_PROVIDER=IDCLOUDHOST_S3
S3_ENDPOINT=https://s3-idcloudhost.example.com
S3_REGION=us-east-1
S3_BUCKET=kontribo-assets
S3_ACCESS_KEY=replace_with_access_key
S3_SECRET_KEY=replace_with_secret_key

# =========================
# Xendit (Payment Gateway)
# =========================
XENDIT_SECRET_KEY=xnd_development_secret_key
XENDIT_WEBHOOK_TOKEN=replace_with_xendit_webhook_token
XENDIT_CALLBACK_TOKEN=replace_with_xendit_callback_token
